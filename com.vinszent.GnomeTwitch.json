{
  "app-id": "com.vinszent.GnomeTwitch",
  "runtime": "org.gnome.Platform",
  "runtime-version": "3.26",
  "sdk": "org.gnome.Sdk",
  "command": "gnome-twitch",
  "finish-args": [
    "--share=ipc",
    "--share=network",
    "--socket=x11",
    "--socket=wayland",
    "--socket=pulseaudio",

    "--env=GST_PLUGIN_PATH_1_0=/app/lib/gstreamer-1.0",
    "--env=SSL_CERT_FILE=/etc/ssl/certs/ca-certificates.crt",

    "--env=DCONF_USER_CONFIG_DIR=.config/dconf",
    "--filesystem=xdg-run/dconf",
    "--filesystem=~/.config/dconf:ro",
    "--talk-name=ca.desrt.dconf"
  ],
  "modules": [
    {
      "name": "gst-libav",
      "config-opts": [ "--disable-gtk-doc", "--with-system-libav" ],
      "cleanup": [ "*.la", "/share/gtk-doc" ],
      "sources": [{
        "type": "archive",
        "url": "https://gstreamer.freedesktop.org/src/gst-libav/gst-libav-1.12.4.tar.xz",
        "sha256": "2a56aa5d2d8cd912f2bce17f174713d2c417ca298f1f9c28ee66d4aa1e1d9e62"
      }],
      "modules": [
        {
          "name": "ffmpeg",
          "cleanup": [ "/include", "/lib/pkgconfig", "/share" ],
          "config-opts": [
            "--disable-all",
            "--enable-shared",
            "--disable-static",
            "--enable-gnutls",
            "--enable-avfilter",
            "--enable-avcodec",
            "--enable-avformat",
            "--enable-swscale",
            "--enable-hwaccels",
            "--enable-decoder=h264",
            "--enable-decoder=aac"
          ],
          "sources": [{
            "type": "archive",
            "url": "https://ffmpeg.org/releases/ffmpeg-3.4.1.tar.xz",
            "sha256": "5a77278a63741efa74e26bf197b9bb09ac6381b9757391b922407210f0f991c0"
          }]
        }
      ]
    },
    {
      "name": "gnome-twitch",
      "buildsystem": "meson",
      "config-opts": [
        "-Dbuild-player-backends=gstreamer-cairo,gstreamer-opengl",
        "--buildtype=release"
      ],
      "cleanup": [
        "/include",
        "/lib/girepository-1.0",
        "/lib/pkgconfig",
        "/share/gir-1.0"
      ],
      "sources": [{
        "type": "git",
        "url": "https://github.com/vinszent/gnome-twitch.git"
      }],
      "modules": [
        {
          "name": "libpeas",
          "config-opts": [ "--disable-gtk-doc", "--disable-python2", "--disable-python3" ],
          "cleanup": [ "/bin/*", "/lib/peas-demo", "/include", "/lib/girepository-1.0",
                       "/lib/*.la", "/lib/pkgconfig", "/share/gir-1.0", "/share/gtk-doc" ],
          "sources": [{
            "type": "archive",
            "url": "https://download.gnome.org/sources/libpeas/1.20/libpeas-1.20.0.tar.xz",
            "sha256": "f392fffe2dc00072a51bb2a1b274224a06bdc5f9c3b3c0ac4816909e9933d354"
          }]
        }
      ]
    }
  ]
}
