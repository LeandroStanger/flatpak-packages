{
  "app-id": "io.github.GnomeMpv",
  "runtime": "org.gnome.Platform",
  "runtime-version": "3.24",
  "sdk": "org.gnome.Sdk",
  "command": "gnome-mpv",
  "rename-icon": "gnome-mpv",
  "copy-icon": true,
  "finish-args": [
      "--share=ipc",
      "--socket=x11",
      "--socket=wayland",
      "--device=dri",
      "--share=network",
      "--socket=pulseaudio",
      "--talk-name=org.gtk.vfs",
      "--talk-name=org.gtk.vfs.*",
      "--talk-name=org.gnome.SettingsDaemon",
      "--talk-name=org.gnome.SettingsDaemon.MediaKeys",
      "--env=DCONF_USER_CONFIG_DIR=.config/dconf",
      "--filesystem=xdg-run/dconf",
      "--filesystem=~/.config/dconf:ro",
      "--talk-name=ca.desrt.dconf",
      "--own-name=org.mpris.MediaPlayer2.GnomeMpv.*",
      "--env=SSL_CERT_FILE=/etc/ssl/certs/ca-certificates.crt"
  ],
  "modules": [
    {
      "name": "gnome-mpv",
      "buildsystem": "meson",
      "builddir": true,
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/gnome-mpv/gnome-mpv.git"
        }
      ],
      "modules": [
        {
          "name": "libmpv",
          "cleanup": [ "/include", "/lib/pkgconfig" ],
          "buildsystem": "simple",
          "build-commands": [
            "python3 waf configure --prefix=/app --enable-libmpv-shared --disable-cplayer --disable-build-date --disable-oss-audio --disable-alsa",
            "python3 waf build",
            "python3 waf install"
          ],
          "sources": [
            {
              "type": "archive",
              "url": "https://github.com/mpv-player/mpv/archive/v0.27.0.tar.gz",
              "sha256": "341d8bf18b75c1f78d5b681480b5b7f5c8b87d97a0d4f53a5648ede9c219a49c"
            },
            {
              "type": "file",
              "url": "https://waf.io/waf-1.9.8",
              "sha256": "167dc42bab6d5bd823b798af195420319cb5c9b571e00db7d83df2a0fe1f4dbf",
              "dest-filename": "waf"
            }
          ],
          "modules": [
            "org.ffmpeg.FFmpeg.json",
            "org.luajit.Luajit.json",
            {
              "name": "libass",
              "cleanup": [ "/include", "/lib/*.la", "/lib/pkgconfig" ],
              "config-opts": [ "--disable-static" ],
              "sources": [{
                "type": "archive",
                "url": "https://github.com/libass/libass/releases/download/0.13.7/libass-0.13.7.tar.xz",
                "sha256": "7065e5f5fb76e46f2042a62e7c68d81e5482dbeeda24644db1bd066e44da7e9d"
              }],
              "modules": [{
                "name": "fribidi",
                "cleanup": [ "/bin", "/include", "/lib/pkgconfig", "/lib/*.la", "/share/man" ],
                "sources": [{
                  "type": "archive",
                  "url": "http://fribidi.org/download/fribidi-0.19.7.tar.bz2",
                  "sha256": "08222a6212bbc2276a2d55c3bf370109ae4a35b689acbc66571ad2a670595a8e"
                }]
              }]
            },
            {
              "name": "youtube-dl",
              "no-autogen": true,
              "cleanup": [ "/etc", "/man", "/share" ],
              "build-options": { "env": { "PREFIX": "/app" } },
              "sources": [{
                "type": "archive",
                "url": "https://github.com/rg3/youtube-dl/releases/download/2017.09.02/youtube-dl-2017.09.02.tar.gz",
                "sha256": "699a7ca22243e6a11a3e3a2b4f933c1ec0799d205a58c1eb5b139ee53252d9e9"
              }]
            }
          ]
        }
      ]
    }
  ]
}