{
  "app-id": "io.github.Pithos",
  "runtime": "org.gnome.Platform",
  "runtime-version": "3.22",
  "sdk": "org.gnome.Sdk",
  "command": "pithos",
  "finish-args": [
    "--share=ipc",
    "--share=network",
    "--socket=x11",
    "--socket=wayland",
    "--socket=pulseaudio",

    "--env=SSL_CERT_FILE=/etc/ssl/certs/ca-certificates.crt",

    "--env=GST_PLUGIN_PATH_1_0=/app/lib/gstreamer-1.0",
    "--talk-name=org.gtk.vfs",
    "--talk-name=org.gtk.vfs.*",

    "--env=DCONF_USER_CONFIG_DIR=.config/dconf",
    "--filesystem=xdg-run/dconf",
    "--filesystem=~/.config/dconf:ro",
    "--talk-name=ca.desrt.dconf",
    "--talk-name=org.freedesktop.secrets",

    "--talk-name=org.freedesktop.Notifications",

    "--talk-name=org.gnome.SettingsDaemon",
    "--talk-name=org.mate.SettingsDaemon",

    "--talk-name=org.gnome.ScreenSaver",
    "--talk-name=org.cinnamon.ScreenSaver",
    "--talk-name=org.freedesktop.ScreenSaver",
    "--talk-name=com.canonical.Unity.Session",

    "--own-name=org.mpris.MediaPlayer2.pithos",
    "--own-name=net.kevinmehall.Pithos",
    "--filesystem=/tmp"
  ],
  "modules": [
    {
      "name": "gst-libav",
      "config-opts": [ "--disable-gtk-doc", "--with-system-libav" ],
      "cleanup": [ "*.la", "/share/gtk-doc" ],
      "sources": [{
        "type": "archive",
        "url": "https://gstreamer.freedesktop.org/src/gst-libav/gst-libav-1.8.3.tar.xz",
        "sha256": "9006a05990089f7155ee0e848042f6bb24e52ab1d0a59ff8d1b5d7e33001a495"
      }],
      "modules": [ "org.ffmpeg.FFmpeg.json" ]
    },
    {
      "name": "pylast",
      "no-autogen": true,
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/pylast/pylast/archive/1.6.0.tar.gz",
          "sha256": "14e611d231b25a9b2bd1b59baf6fb248834a6377c8dc3162ecf0cb57206d1321"
        },
        {
          "type": "file",
          "path": "setuptools-makefile",
          "dest-filename": "Makefile"
        }
      ],
      "modules": [{
        "name": "six",
        "no-autogen": true,
        "sources": [
          {
            "type": "archive",
            "url": "https://bitbucket.org/gutworth/six/get/1.10.0.tar.gz",
            "sha256": "99e649e048a0c300e54d92ea47c43642549de141126482452b692c8441790df4"
          },
          {
            "type": "file",
            "path": "setuptools-makefile",
            "dest-filename": "Makefile"
          }
        ]
      }]
    },
    {
      "name": "pithos",
      "sources": [{
        "type": "git",
        "url": "https://github.com/pithos/pithos.git"
      }]
    }
  ]
}
