{
  "app-id": "io.github.Hexchat",
  "runtime": "org.gnome.Platform",
  "runtime-version": "3.22",
  "sdk": "org.gnome.Sdk",
  "command": "hexchat-wrapper",
  "rename-desktop-file": "hexchat.desktop",
  "rename-appdata-file": "hexchat.appdata.xml",
  "rename-icon": "hexchat",
  "finish-args": [
    "--share=ipc",
    "--socket=x11",
    "--socket=session-bus",
    "--share=network",
    "--filesystem=/etc/ssl:ro",
    "--filesystem=/etc/ca-certificates:ro",
    "--filesystem=/etc/pki:ro"
  ],
  "modules": [
    {
      "name": "hexchat",
      "config-opts": [
        "--disable-perl",
        "--disable-stack-protector",
        "--enable-python=python3"
      ],
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/hexchat/hexchat.git"
        },
        {
          "type": "patch",
          "path": "hexchat-notification-appid.patch"
        }
      ],
      "modules": [
        {
          "name": "luajit",
          "no-autogen": true,
          "cleanup": [ "/bin", "/lib/*.a", "/include" ],
          "sources": [
            {
              "type": "archive",
              "url": "http://luajit.org/download/LuaJIT-2.0.4.tar.gz",
              "sha256": "620fa4eb12375021bef6e4f237cbd2dd5d49e56beb414bee052c746beef1807d"
            },
            {
              "type": "shell",
              "commands": [ "sed -i 's|/usr/local|/app|' ./Makefile" ]
            }
          ]
        },
        {
          "name": "lgi",
          "no-autogen": true,
          "build-options": {
            "cflags": "-O2",
            "env": {
              "LUA_CFLAGS": "-I/app/include/luajit-2.0"
            }
          },
          "sources": [
            {
              "type": "archive",
              "url": "https://github.com/pavouk/lgi/archive/0.9.1.tar.gz",
              "sha256": "0c70fb2b1ca17d333b7e2c18d5fc943944b5872e063de60df3035ee20b6dafba"
            },
            {
              "type": "shell",
              "commands": [ "sed -i 's|/usr/local|/app|' ./lgi/Makefile" ]
            }
          ]
        }
      ]
    },
    {
      "name": "wrapper",
      "no-autogen": true,
      "sources": [
        {
          "type": "file",
          "path": "ssl-wrapper",
          "dest-filename": "hexchat-wrapper"
        },
        {
          "type": "file",
          "path": "wrapper-makefile",
          "dest-filename": "Makefile"
        }
      ]
    }
  ]
}
